% Initialwerte
/ANGLE1     -85     def                     
/ANGLE2     170     def                     
/LEN        500     def                     % Länge der Linie
/MAX_DEPTH  4       def                     % Rekursionstiefe
/STARTX     200     def                     % Initialwert f. X-Koordinate
/STARTY     700     def                     % Initialwert f. Y-Koordinate

/down
{               
    /LEN LEN 3 div def
    /depth depth 1 add def
}   def

/up
{            
    /LEN LEN 3 mul def
    /depth depth 1 sub def    
}   def

/init
{            
    /depth 0 def                            % Tiefe auf 0 setzen         
    
    STARTX STARTY translate                 % Koordinatensystem an Startposition    
}   def


% line - rekursive Funktion
/line
{                                                       
    depth MAX_DEPTH lt
    {                                            
        down                      
        line                   
        ANGLE1 rotate                  
        line                  
        ANGLE2 rotate                                  
        line       
        ANGLE1 rotate                 
        line
        up                                                                                                    
    }           
    {                   
        LEN 0 rlineto                        % Linie zeichnen              
        LEN 0 translate                                        
    } ifelse  
       
}   def

