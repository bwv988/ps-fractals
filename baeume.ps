/down
{
    /LEN LEN FAKT div def
    /depth depth 1 add def
}   def

/up
{
    /LEN LEN FAKT mul def
    /depth depth 1 sub def
}   def

/init
{
    /NEG_TH_2 -1 DELTA 2 div mul def
    /TH_2 -1 NEG_TH_2 mul def
    STARTX STARTY translate                 % Koordinatensystem an Startposition
}   def

/tree
{
    depth MAX_DEPTH lt
    {
        down
        left
        tree
        right
        tree
        up
    } if
}   def


/left
{
    gsave
    /th_2 TH_2 def
    halfline
}   def

/right
{
    grestore
    /th_2 NEG_TH_2 def
    halfline
}   def

/halfline
{
    0 0 moveto
    th_2 rotate
    0 LEN rlineto
    0 LEN translate
    stroke
}   def

/newtree
{
    gsave
        init
        /depth 0 def
        tree
    grestore

}   def

%%EndProlog

