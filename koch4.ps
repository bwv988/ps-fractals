/ANGLE1     90      def                     
/ANGLE2     -90     def

/down
{               
    /LEN LEN 8 div def
    /depth depth 1 add def
}   def

/up
{            
    /LEN LEN 8 mul def
    /depth depth 1 sub def    
}   def

/init
{            
    /depth 0 def                            % Tiefe auf 0 setzen         
    
    STARTX STARTY translate                 % Koordinatensystem an Startposition    
}   def


% line - rekursive Funktion
/line
{                                                       
    depth MAX_DEPTH lt
    {                                            
        down                      
        line                   
        ANGLE1 rotate                  
        line                  
        ANGLE2 rotate                                  
        line       
        ANGLE2 rotate                 
        line
        line
        ANGLE1 rotate
        line
        ANGLE1 rotate
        line
        ANGLE2 rotate
        line        
        up                                                                                                    
    }           
    {                   
        LEN 0 rlineto                        % Linie zeichnen              
        LEN 0 translate                                        
    } ifelse  
       
}   def

/isle
{
    0 0 moveto
    line
    ANGLE1 rotate
    line
    ANGLE1 rotate
    line
    ANGLE1 rotate
    line
    0 setgray fill                              % Füllfarbe 
    stroke
} def

/newisle
{
    gsave
        init        
        isle
    grestore
} def
%%EndProlog

